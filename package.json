{
  "name": "energy-dashboard",
  "version": "1.1.1",
  "description": "Energy Management Dashboard",
  "main": "main.js",
  "scripts": {
    "dist": "npm run build && electron-builder",
    "dev": "vite",
    "electron": "electron .",
    "electron:dev": "electron . --dev",
    "build": "vite build",
    "electron:prod": "npm run build && electron .",
    "test": "jest",
    "generate-configs": "ts-node config/generateDeviceConfigs.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@amcharts/amcharts5": "^5.13.5",
    "@types/pg": "^8.12.0",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "mqtt": "^4.3.7",
    "mssql": "^11.0.1",
    "node-cron": "^4.1.0",
    "pg": "^8.15.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-modal": "^3.16.3",
    "react-router-dom": "^7.5.3"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/mssql": "^9.1.7",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-modal": "^3.16.3",
    "@vitejs/plugin-react": "^4.4.1",
    "electron": "^28.1.0",
    "electron-builder": "^26.0.12",
    "jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.energy.dashboard",
    "productName": "EnergyDashboard",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "workers/**/*",
      "!node_modules/.cache/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "zeynepvrl",
        "repo": "G-nes_Enerji_Santrali_Dashboard_Electron_AmChart"
      }
    ]
  }
}
